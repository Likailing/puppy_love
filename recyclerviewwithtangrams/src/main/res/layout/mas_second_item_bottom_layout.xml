<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="99dp"
    android:paddingTop="10dp"
    android:id="@+id/item_bottom_rl">

    <ImageView
        android:id="@+id/item_bottom_image_iv"
        android:layout_width="114dp"
        android:layout_height="78dp"
        android:src="@drawable/pic_1"
        android:scaleType="fitXY"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#E8E8E8"/>

    <TextView
        android:id="@+id/item_bottom_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当涂大闸蟹"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textColor="#333333"
        android:layout_toRightOf="@id/item_bottom_image_iv"
        />
    <TextView
        android:id="@+id/item_bottom_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0月12号看《新闻联播》了吗？马鞍山当涂大闸蟹“爬”到央视《新闻联播》头条了。据《当涂县志》载：“当涂境内电动的"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="24dp"
        android:textSize="13sp"
        android:textColor="#9B9B9B"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/item_bottom_image_iv"
        android:layout_below="@id/item_bottom_title_tv"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"/>
</RelativeLayout>